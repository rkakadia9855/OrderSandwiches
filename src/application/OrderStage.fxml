<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.OrderStageController">
   <center>
      <GridPane prefHeight="285.0" prefWidth="567.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="158.33334350585938" minHeight="10.0" prefHeight="27.666650772094727" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="195.33334922790527" minHeight="10.0" prefHeight="170.66665649414062" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="51.333343505859375" minHeight="0.0" prefHeight="51.333343505859375" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <ComboBox fx:id="combo" onAction="#sandwichSelected" prefWidth="150.0" GridPane.halignment="CENTER" />
            <Label text="Extra Ingredients (Max: 6)" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
            <ImageView fx:id="sandwichPhoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <image>
                  <Image url="@../Resources/ChickenSandwich.JPG" />
               </image></ImageView>
            <ListView fx:id="extraIngredients" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin></ListView>
            <GridPane prefHeight="52.0" prefWidth="241.0" GridPane.rowIndex="2">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="137.33334350585938" minWidth="10.0" prefWidth="92.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="192.0" minWidth="10.0" prefWidth="192.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Price" GridPane.halignment="RIGHT">
                     <GridPane.margin>
                        <Insets right="5.0" />
                     </GridPane.margin></Label>
                  <TextField fx:id="price" prefHeight="25.0" prefWidth="111.0" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets right="5.0" />
                     </GridPane.margin></TextField>
               </children>
            </GridPane>
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="addSandwich" mnemonicParsing="false" onAction="#addToOrder" text="Add Sandwich" GridPane.halignment="CENTER" />
                  <Button fx:id="viewDetails" mnemonicParsing="false" onAction="#viewOrder" text="View Details" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                  <Button fx:id="submit" mnemonicParsing="false" onAction="#submitOrder" text="Submit Order" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
               </children>
            </GridPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
